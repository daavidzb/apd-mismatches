<!DOCTYPE html>
<html lang="es">
  <head>
    <link rel="shortcut icon" href="/public/img/logo.ico" type="image/x-icon" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Subir - Descuadres APD</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/css/index.css" />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body>
    <%- include('partials/navbar', {active: 'upload'}) %>
    <div class="container mt-5">
      <!-- <h2 class="text-center">Analizador de Descuadres</h2> -->
      <form id="uploadForm" class="mt-4" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="excelFiles" class="form-label"
            >Selecciona uno o varios archivos Excel:</label
          >
          <input
            type="file"
            class="form-control"
            id="excelFiles"
            name="files"
            accept=".xls,.xlsx"
            multiple
            required
          />
        </div>
        <div id="fileList" class="file-preview"></div>
        <button type="submit" class="btn btn-primary w-100 mt-4">
          Subir Archivos
        </button>
      </form>
      <div id="uploadStatus" class="mt-3 text-center"></div>
    </div>
    <%- include('partials/footer') %>
    <script src="/public/js/upload.js"></script>
  </body>
</html>
