<!DOCTYPE html>
<html lang="es">
  <head>
    <link rel="shortcut icon" href="/public/img/logo.ico" type="image/x-icon" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Subir - Gestor de Descuadres</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/css/index.css" />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body>
    <%- include('partials/navbar', {active: 'upload'}) %>
    <div class="container-fluid my-4">
      <div class="row">
        <!-- Panel de carga -->
        <div class="col-lg-8 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-header bg-white py-3">
              <h5 class="card-title mb-0">
                <i class="bi bi-cloud-upload me-2"></i>
                Subir archivos
              </h5>
            </div>
            <div class="card-body">
              <form id="uploadForm" enctype="multipart/form-data">
                <div id="dropZone" class="drop-zone">
                  <input type="file" id="fileInput" multiple accept=".xlsx" class="d-none">
                  <div id="selectedFiles" class="selected-files">
                    <div class="text-center text-muted p-4">
                      <i class="bi bi-cloud-arrow-up fs-1"></i>
                      <p class="mt-2">Arrastra archivos aqu√≠ o haz clic para seleccionar</p>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <div class="card-footer bg-white">
              <div class="d-flex justify-content-end">
                <button type="submit" id="uploadButton" form="uploadForm" class="btn btn-primary" disabled>
                  <i class="bi bi-upload me-2"></i>Subir archivos
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Panel de archivos seleccionados -->
        <div class="col-lg-4">
          <div class="card shadow-sm h-100">
            <div class="card-header bg-white py-3">
              <h5 class="card-title mb-0">
                <i class="bi bi-list-check me-2"></i>
                Archivos seleccionados
              </h5>
            </div>
            <div class="card-body p-0">
              <div id="filesList" class="file-list" style="max-height: calc(100vh - 250px); overflow-y: auto;">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
    <script src="/public/js/upload.js"></script>
  </body>
</html>
