<!DOCTYPE html>
<html lang="es">
  <head>
    <link rel="shortcut icon" href="/public/img/logo.ico" type="image/x-icon" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Subir - Gestor de Descuadres</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/css/index.css" />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body>
    <%- include('partials/navbar', {active: 'upload'}) %>
    <div class="container my-4">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title mb-4">
                <i class="bi bi-cloud-upload me-2"></i>
                Subir archivos de descuadres
              </h5>
              <form id="uploadForm" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="fileInput" class="form-label">
                    Seleccione los archivos Excel (.xlsx, .xls)
                  </label>
                  <input
                    type="file"
                    class="form-control"
                    id="fileInput"
                    name="files"
                    accept=".xlsx,.xls"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-primary w-100">
                  <i class="bi bi-upload me-2"></i>
                  Subir archivos
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div id="uploadResults" class="mt-4"></div>
    </div>
    <%- include('partials/footer') %>
    <script src="/public/js/upload.js"></script>
  </body>
</html>
