<!DOCTYPE html>
<html lang="es">
  <head>
    <link rel="shortcut icon" href="/public/img/logo.ico" type="image/x-icon" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Descuadres - Gestor de Descuadres</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/public/css/index.css" />
  </head>
  <body>
    <%- include('partials/navbar', {active: 'mismatches'}) %>
    <div class="container-fluid my-4">
      <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
          <h5 class="card-title mb-0">
            <i class="bi bi-list-check text-primary me-2"></i>
            Inventario Detallado
          </h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="descuadresTable" class="table table-sm table-hover">
              <thead>
                <tr>
                  <th>Fecha</th>
                  <th>Código</th>
                  <th>Descripción</th>
                  <th class="text-end">Diferencia</th>
                  <th class="text-center">Estado</th>
                  <th class="text-center">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% mismatches.forEach(function(item) { %>
                  <tr class="<%= item.descuadre < 0 ? 'table-danger' : item.descuadre > 0 ? 'table-warning' : '' %>">
                    <td data-order="<%= item.fecha_reporte %>">
                      <%= new Date(item.fecha_reporte).toLocaleDateString() %>
                      <small class="text-muted d-block">
                        <%= new Date(item.fecha_reporte).toLocaleTimeString() %>
                      </small>
                    </td>
                    <td><%= item.codigo_med %></td>
                    <td style="max-width: 300px;">
                      <div class="text-truncate" title="<%= item.descripcion %>">
                        <%= item.descripcion %>
                      </div>
                    </td>
                    <td class="text-end">
                      <strong class="<%= item.descuadre < 0 ? 'text-danger' : 'text-success' %>">
                        <%= item.descuadre %>
                      </strong>
                    </td>
                    <td class="text-center">
                      <% if (item.estado) { %>
                        <span class="badge" 
                              style="background-color: <%= item.color %>;" 
                              data-bs-toggle="tooltip" 
                              data-bs-placement="top" 
                              title="<%= item.observaciones || 'Sin observaciones' %>">
                          <%= item.estado %>
                        </span>
                      <% } else { %>
                        <span class="badge bg-secondary">Pendiente</span>
                      <% } %>
                    </td>
                    <td class="text-center">
                      <button class="btn btn-sm btn-info view-history" 
                              data-code="<%= item.codigo_med %>"
                              data-description="<%= item.descripcion %>"
                              data-bs-toggle="tooltip"
                              data-bs-placement="left"
                              title="Ver historial completo">
                        <i class="bi bi-clock-history"></i>
                      </button>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
    <script src="/public/js/config/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="/public/js/mismatches.js"></script>
  </body>
</html>
