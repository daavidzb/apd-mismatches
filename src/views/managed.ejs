    <link
      href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link href="/public/css/index.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">
        <div class="navbar-brand-container">
          <a class="navbar-brand" href="/upload">
            <img
              src="/public/img/logo.png"
              alt="APD Logo"
              class="navbar-logo"
            />
          </a>
        </div>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/upload">
                <i class="bi bi-cloud-upload me-1"></i>
                Subir
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/mismatches">
                <i class="bi bi-table me-1"></i>
                Histórico
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/reports">
                <i class="bi bi-graph-up-arrow me-1"></i>
                Reportes
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/analysis">
                <i class="bi bi-clipboard2-data me-1"></i>
                Análisis
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/managed">
                <i class="bi bi-check2-circle me-1"></i>
                Gestionados
              </a>
            </li>
            <!-- <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="bi bi-arrow-clockwise me-1"></i>
                Actualizar
              </a>
            </li> -->
          </ul>
        </div>
      </div>
    </nav>

    <div class="container my-4">
      <div class="row mb-4">
        <div class="col">
          <h2><i class="bi bi-clipboard2-check"></i> Gestionar Descuadres</h2>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <ul class="nav nav-tabs" id="managedTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link active"
                id="pending-tab"
                data-bs-toggle="tab"
                data-bs-target="#pending"
                type="button"
                role="tab"
              >
                <i class="bi bi-hourglass-split"></i> Pendientes
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link"
                id="inprocess-tab"
                data-bs-toggle="tab"
                data-bs-target="#inprocess"
                type="button"
                role="tab"
              >
                <i class="bi bi-arrow-repeat"></i> En Proceso
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link"
                id="completed-tab"
                data-bs-toggle="tab"
                data-bs-target="#completed"
                type="button"
                role="tab"
              >
                <i class="bi bi-check-circle"></i> Corregidos
              </button>
            </li>
          </ul>

          <div class="tab-content mt-3" id="managedTabsContent">
            <div class="tab-pane fade show active" id="pending" role="tabpanel">
              <div class="table-responsive">
                <table class="table table-striped" id="pendingTable">
                  <thead>
                    <tr>
                      <th>Código</th>
                      <th>Descripción</th>
                      <th>Descuadre</th>
                      <th>Categoría</th>
                      <th>Motivo</th>
                      <th>Última actualización</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/public/js/managed.js"></script>
  </body>
</html>
